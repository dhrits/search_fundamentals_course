{
  "settings": {
    "index.refresh_interval": "5s",
    "index": {
      "query": {
          "default_field": "name"
      }
    },
    "analysis": {
      "analyzer": {
        "htmlStripAnalyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["lowercase"],
          "char_filter": [
            "html_strip"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "productId": {"type": "long"},
      "sku": {"type": "long"},
      "name": {"type": "text"},
      "type": {"type": "keyword", "ignore_above": "256"},
      "startDate": {"type": "date"},
      "active": {"type": "boolean"},
      "regularPrice": {"type": "float"},
      "salePrice": {"type": "float"},
      "artistName": {"type": "text"},
      "onSale": {"type": "boolean"},
      "digital": {"type": "boolean"},
      "frequentlyPurchasedWith": {"type": "text"},
      "accessories": {"type": "text"},
      "relatedProducts":  {"type": "text"},
      "crossSell":  {"type": "text"},
      "salesRankShortTerm": {"type": "long"},
      "salesRankMediumTerm": {"type": "long"},
      "salesRankLongTerm": {"type": "long"},
      "bestSellingRank": {"type": "long"},
      "url": {"type": "keyword", "ignore_above": "2048"},
      "categoryPath": {
        "type": "keyword", "ignore_above": "512"
      },
      "categoryPathIds": {"type": "keyword", "ignore_above": "2048"},
      "categoryLeaf": {"type": "keyword", "ignore_above": "2048"},
      "categoryPathCount": {"type": "long"},
      "customerReviewCount": {"type": "long"},
      "customerReviewAverage": {"type": "float"},
      "inStoreAvailability": {"type": "boolean"},
      "onlineAvailability": {"type": "boolean"},
      "releaseDate": {"type": "date"},
      "shippingCost": {"type": "float"},
      "shortDescription": {"type": "text", "analyzer": "english"},
      "shortDescriptionHtml": {"type": "text", "analyzer": "htmlStripAnalyzer"},
      "class": {"type": "keyword", "ignore_above": "2048"},
      "classId": {"type": "long"},
      "subclass": {"type": "keyword", "ignore_above": "2048"},
      "subclassId": {"type": "long"},
      "department": {"type": "keyword", "ignore_above": "2048"},
      "departmentId": {"type": "long"},
      "bestBuyItemId": {"type": "long"},
      "description": {"type": "text", "analyzer": "english"},
      "manufacturer": {"type": "keyword", "ignore_above": "256"},
      "modelNumber": {"type": "keyword", "ignore_above": "256"},
      "image": {"type": "keyword", "ignore_above": 2048},
      "condition": {"type": "keyword", "ignore_above": "256"},
      "inStorePickup": {"type": "boolean"},
      "homeDelivery": {"type": "boolean"},
      "quantityLimit": {"type": "long"},
      "color": {"type": "keyword", "ignore_above": "256"},
      "depth": {"type": "text"},
      "height": {"type": "text"},
      "weight": {"type": "text"},
      "shippingWeight": {"type": "float"},
      "width": {"type": "text"},
      "longDescription": {"type": "text", "analyzer": "english"},
      "longDescriptionHtml": {"type": "text", "analyzer": "htmlStripAnalyzer"},
      "features": {
          "type": "text", "analyzer": "english"
        }
      }
    }
  }


}
